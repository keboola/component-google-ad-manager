{
  "title": "Report Configuration",
  "type": "object",
  "required": [
    "report_type",
    "report_name",
    "metrics",
    "dimensions",
    "timezone"
  ],
  "properties": {
    "report_type": {
      "title": "Report type",
      "type": "string",
      "enum": [
        "Historical",
        "Future sell - through",
        "Reach",
        "Ad Exchange",
        "Ad speed"
      ],
      "default": "Object",
      "propertyOrder": 1
    },
    "report_name": {
      "title": "Report Name",
      "type": "string",
      "description": "Name of output table of the report eg. historical_report",
      "propertyOrder": 2
    },
    "dimensions": {
      "title": "Dimensions",
      "type": "string",
      "description": "List of dimensions to use for the report",
      "propertyOrder": 3
    },
    "dimension_attributes": {
      "title": "Dimension Attributes",
      "type": "string",
      "description": "List of dimensions attributes to use for the report",
      "propertyOrder": 4
    },
    "metrics": {
      "title": "Metrics",
      "type": "string",
      "description": "List of metrics to use for the report",
      "propertyOrder": 5
    },
    "timezone": {
      "title": "Timezone",
      "type": "string",
      "enum": [
        "PUBLISHER",
        "AD_EXCHANGE",
        "UNKNOWN"
      ],
      "default": "Object",
      "propertyOrder": 6
    },
    "date_range_type": {
      "title": "Date range type",
      "type": "string",
      "enum": [
        "DYNAMIC",
        "PRECISE"
      ],
      "description": "Dynamic (last week, last month), Fixed : 3 days ago to 1 day ago",
      "propertyOrder": 7
    },
    "dynamic_date_range": {
      "title": "Dynamic date range",
      "type": "string",
      "enum": [
        "Last week (sun-sat)",
        "Last month"
      ],
      "options": {
        "dependencies": {
          "date_range_type": "DYNAMIC"
        }
      },
      "propertyOrder": 8
    },
    "date_from": {
      "title": "Date from",
      "type": "string",
      "options": {
        "dependencies": {
          "date_range_type": "PRECISE"
        }
      },
      "description": "Start date of the report eg. 3 days ago",
      "propertyOrder": 9
    },
    "date_to": {
      "title": "Date to",
      "type": "string",
      "options": {
        "dependencies": {
          "date_range_type": "PRECISE"
        }
      },
      "description": "End date of the report eg. 1 day ago",
      "propertyOrder": 10
    },
    "report_currency": {
      "title": "Report currency",
      "type": "string",
      "options": {
        "dependencies": {
          "report_type": "Ad Exchange"
        }
      },
      "description": "Report currency",
      "propertyOrder": 11
    }
  }
}