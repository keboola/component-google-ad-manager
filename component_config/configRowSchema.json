{
  "title": "Report Configuration",
  "type": "object",
  "required": [
    "report_name"
  ],
  "properties": {
    "report_name": {
      "title": "Output Name",
      "type": "string",
      "description": "Name of output table of the report eg. historical_report",
      "propertyOrder": 10
    },
    "report_settings": {
      "type": "object",
      "title": "Report settings",
      "required": [
        "report_type",
        "metrics",
        "dimensions",
        "ad_unit_view"
      ],
      "propertyOrder": 20,
      "properties": {
        "report_type": {
          "title": "Report type",
          "type": "string",
          "enum": [
            "Historical",
            "Future sell - through",
            "Reach",
            "Ad Exchange",
            "Ad speed"
          ],
          "default": "Object",
          "propertyOrder": 30
        },
        "dimensions": {
          "title": "Dimensions",
          "type": "string",
          "description": "List of dimensions to use for the report, find supported dimensions for specific report types in the documentation",
          "propertyOrder": 40
        },
        "dimension_attributes": {
          "title": "Dimension Attributes",
          "type": "string",
          "description": "List of dimensions attributes to use for the report, find supported dimension attributes for specific report types in the documentation",
          "propertyOrder": 50
        },
        "metrics": {
          "title": "Metrics",
          "type": "string",
          "description": "List of metrics to use for the report, find supported metrics for specific report types in the documentation",
          "propertyOrder": 60
        },
        "report_currency": {
          "title": "Report currency",
          "type": "string",
          "options": {
            "dependencies": {
              "report_type": "Ad Exchange"
            }
          },
          "description": "Report currency",
          "propertyOrder": 70
        },
        "ad_unit_view": {
          "title": "Ad unit view",
          "type": "string",
          "enum": [
            "FLAT",
            "TOP_LEVEL",
            "HIERARCHICAL"
          ],
          "description": "Ad unit view describes how data is fetched about ad units, data can be fetched for all ad units with Flat, only top level ad units with Top level, or Hierarchically",
          "default": "Object",
          "propertyOrder": 80
        },
        "include_zero_impressions": {
          "title": "Include zero impressions",
          "type": "boolean",
          "format" : "checkbox",
          "description": "If your report supports this, you can download data of ads with zer impressions",
          "default": false,
          "propertyOrder": 90
        }
      }
    },
    "date_settings": {
      "type": "object",
      "title": "Date range",
      "propertyOrder": 90,
      "required": [
        "timezone",
        "date_range"
      ],
      "properties": {
        "timezone": {
          "title": "Timezone",
          "type": "string",
          "enum": [
            "PUBLISHER",
            "AD_EXCHANGE",
            "UNKNOWN"
          ],
          "default": "Object",
          "propertyOrder": 100
        },
        "date_range": {
          "title": "Dynamic date range",
          "type": "string",
          "enum": [
            "Last week (sun-sat)",
            "Next week",
            "Last month",
            "Next month",
            "Next_day",
            "Yesterday",
            "Reach lifetime",
            "Custom"
          ],
          "propertyOrder": 110
        },
        "date_from": {
          "title": "Date from",
          "type": "string",
          "options": {
            "dependencies": {
              "date_range": "Custom"
            }
          },
          "description": "Start date of the report eg. 3 days ago",
          "propertyOrder": 120
        },
        "date_to": {
          "title": "Date to",
          "type": "string",
          "options": {
            "dependencies": {
              "date_range": "Custom"
            }
          },
          "description": "End date of the report eg. 1 day ago",
          "propertyOrder": 130
        }
      }
    }
  }
}